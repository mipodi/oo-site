---
layout: layouts/base.njk
templateClass: tmpl-page
---

<article>
  <h1>{{ sitePage.title }}</h1>

  {% if sitePage.mainImage %}
    <img src="{%  imageUrlFor sitePage.mainImage, 900  %}" alt="{{ sitePage.mainImage.alt }}">
  {% endif %}

  {{ sitePage.body | markdownify | safe }}
  <p><a href="{{ '/' | url }}">‚Üê Home</a></p>
</article>

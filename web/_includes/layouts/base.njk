<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
      {# <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}"> #}
    {% set css %}
      {% include "style.css" %}
    {% endset %}
    <style>
      {{ css | cssmin | safe }}
    </style>
  </head>
  <body>
    <header>
        <div class="logo-image">
            <a href="/" aria-label="Homepage"><img src="https://cdn.sanity.io/images/9zkvur1x/production/e82b828842a28e60d182c2c0dfaa94522bf7f68e-113x118.png?h=38"
             alt="Order order studio logo jellyfish"></a>
        </div>

        <!-- <a class="home" href="{{ '/' | url }}">{{ metadata.title }}</a> -->
      <!-- <h1 class="home"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1> -->
      <ul class="nav">
        {%- for nav in collections.nav | reverse -%}
        <div class="nav-wrapper"
        <li class="nav-item{% if nav.url == page.url %} nav-item-active{% endif %}"><a href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a></li>
        </div>
        {%- endfor -%}
      </ul>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer>
        <p>Complex data, research or products? </p>
        <p><b>Order Order Studio</b> helps you sort things out.</p>
        <p>hej@orderorder.io</p>

        <div class="instagram-logo">
            <a href="https://www.instagram.com/orderorder.io/" aria-label="Instagram account"><img src="https://cdn.sanity.io/images/9zkvur1x/production/f80e4fdffa976d2fb0ff2eb587a152d5d548007f-36x36.png" alt="Instagram account"></a>
        </div>
    </footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>

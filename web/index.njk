---
layout: layouts/home.njk
pagination:
  alias: frontPage
  data: frontPage
  size: 1
---


<article>
  <h1>{{ frontPage.title }}</h1>

  {% if frontPage.mainImage %}
    <img src="{%  imageUrlFor frontPage.mainImage, 900  %}" alt="{{ frontPage.mainImage.alt }}">
  {% endif %}

  {{ frontPage.body | markdownify | safe }}

</article>
